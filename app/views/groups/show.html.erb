<%= render @group %>

<div class="mt-3 d-flex">
  <%= link_to "Edit this group", edit_group_path(@group), class: 'btn btn-warning m-2' %>
  <%= link_to "Back to groups", groups_path, class: 'btn btn-secondary m-2' %>
  <%= button_to "Destroy this group", @group, method: :delete, class: 'btn btn-danger m-2', data: { confirm: 'Are you sure?' } %>
</div>

<h2 class="mt-4">Users and Roles:</h2>
<ul class="list-group">
  <% @users.each do |user| %>
    <li class="list-group-item">
      <%= "#{user.full_name}: " %>
      <% user_association = @user_group_associations.find_by(user: user, group: @group) %>
      <span class="font-weight-bold">
        <%= user_association.present? ? user_association.role&.capitalize : 'No Role' %>
      </span>
    </li>
  <% end %>
</ul>